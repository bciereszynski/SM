<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDetailsActivity">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="143dp"
        android:layout_height="152dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:contentDescription="@string/cover_content_description"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover"
        android:layout_below="@+id/book_title"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/book_first_publish_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover"
        android:layout_below="@+id/book_author"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/book_languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover"
        android:layout_below="@+id/img_cover"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/book_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover"
        android:layout_below="@+id/book_languages"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/book_persons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover"
        android:layout_below="@+id/book_times"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textAppearance="?attr/textAppearanceListItem" />


</RelativeLayout>